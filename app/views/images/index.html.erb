<table>
  <tr>
    <a href=<%= new_image_path %> id="link_to_image_upload_form">
      <%= t :link_to_image_upload_form %>
    </a>
  </tr>
  <% if flash[:success] %>
    <p id="success"> <%= flash[:success] %> </p>
  <% end %>
  <% if @images.empty? %>
    <p><%= t :index_no_images_found %></p>
  <% end %>
  <% @images.each_with_index do |image| %>
    <tr>
      <td class="js-image_cell">
        <%= image_tag image.url, width: 400, id: "display_image" %>
        <% image.tag_list.each_with_index do |tag, tag_index| %>
          <%= link_to tag, images_path(tag: tag), class: "js-image_tag" %>
        <% end %>
        <%= link_to (t :index_delete_label), image_path(image), method: :delete, data: { confirm: (t :index_delete_confirm_label) } %>
      </td>
    </tr>
  <% end %>
</table>
